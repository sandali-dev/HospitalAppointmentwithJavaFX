<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="680" prefWidth="980" style="-fx-background-color: #e0f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.LoginController">

    <children>

        <!-- White Card with your cyan color (exactly as you wanted) -->
        <VBox alignment="CENTER" layoutX="299.0" layoutY="81.0" prefHeight="506.0" prefWidth="414.0" spacing="25" style="-fx-background-color: rgba(255,255,255,0.38); -fx-background-radius: 20px; -fx-padding: 45 35 45 35; -fx-border-color: rgba(0,188,212,0.4); -fx-border-radius: 24;">

            <children>
                <!-- name -->
                <Label style="-fx-font-size: 26px;                       -fx-font-weight: bold;                       -fx-text-fill:#01579b;" text="EliteCare Clinic" />

                <ComboBox fx:id="roleCombo" prefWidth="300" promptText="Select Role" style="-fx-background-radius: 16; -fx-border-radius: 16;                              -fx-background-color: rgba(255,255,255,0.7);                              -fx-border-color: #00bcd4; -fx-border-width: 1.2;                              -fx-prompt-text-fill: #78909c;" />

                <TextField fx:id="usernameField" prefWidth="300" promptText="Username" style="-fx-background-radius: 16; -fx-border-radius: 16;                               -fx-background-color: rgba(255,255,255,0.85);                               -fx-border-color: #00bcd4; -fx-border-width: 1.5;                               -fx-prompt-text-fill: derive(#455a64,70%);                               -fx-text-fill: #263238;                               -fx-padding: 12 16 12 16;" />

                <PasswordField fx:id="passwordField" prefWidth="300" promptText="Password" style="-fx-background-radius: 16; -fx-border-radius: 16;                                   -fx-background-color: rgba(255,255,255,0.85);                                   -fx-border-color: #00bcd4; -fx-border-width: 1.5;                                   -fx-prompt-text-fill: derive(#455a64,70%);                                   -fx-text-fill: #263238;                                   -fx-padding: 12 16 12 16;" />


                <!--login button -->
                <Button fx:id="loginBtn" prefWidth="300" style="-fx-background-color: #00bcd4;                            -fx-text-fill: white;                            -fx-font-size: 15px;                            -fx-font-weight: bold;                            -fx-background-radius: 16;                            -fx-padding: 14 0 14 0;                            -fx-cursor: hand;" text="LOGIN" />

                <Button fx:id="registerBtn" prefWidth="300" style="-fx-background-color: transparent;                        -fx-text-fill: #0288d1;                        -fx-font-size: 14px;                        -fx-underline: true;                        -fx-cursor: hand;" text="New Patient? Register Here" />

            </children>

        </VBox>
        <!-- Background Image -->
        <ImageView fitHeight="304.0" fitWidth="311.0" layoutX="-5.0" layoutY="379.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@image1.png" />
        </ImageView>
        <ImageView fitHeight="389.0" fitWidth="318.0" layoutX="680.0" layoutY="-5.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@image2.png" />
            </image>
        </ImageView>
    </children>

</AnchorPane>
