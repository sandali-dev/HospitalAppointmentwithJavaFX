<AnchorPane prefHeight="680" prefWidth="980" style="-fx-background-color: #e0f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PatientController">

    <!-- TOP BAR -->
    <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefWidth="980" spacing="16" style="-fx-background-color: white; -fx-padding: 14 28 14 28;                  -fx-border-color: #b2ebf2; -fx-border-width: 0 0 1.5 0;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="Hospital Appointment Management System" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="welcomeLabel" style="-fx-font-size: 13px; -fx-text-fill: #546e7a;" text="Welcome" />
        <Button fx:id="logoutBtn" style="-fx-background-color: #00bcd4; -fx-text-fill: white;                        -fx-font-weight: bold; -fx-background-radius: 12;                        -fx-padding: 7 18; -fx-cursor: hand;" text="Logout" />
    </HBox>

    <!-- SIDEBAR -->
    <VBox layoutX="0" layoutY="57" prefHeight="623" prefWidth="190" spacing="10" style="-fx-background-color: rgba(255,255,255,0.6); -fx-padding: 24 12;                  -fx-border-color: #b2ebf2; -fx-border-width: 0 1.5 0 0;">
        <Label style="-fx-font-size: 10px; -fx-font-weight: bold;                       -fx-text-fill: #90a4ae; -fx-padding: 0 0 6 6;" text="MENU" />
        <Button fx:id="btnDoctors" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #0288d1;                        -fx-font-size: 12px; -fx-alignment: CENTER_LEFT;                        -fx-background-radius: 10; -fx-padding: 11 14; -fx-cursor: hand;" text="ðŸ‘¨â€âš•ï¸  View Doctors" />
        <Button fx:id="btnBook" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #0288d1;                        -fx-font-size: 12px; -fx-alignment: CENTER_LEFT;                        -fx-background-radius: 10; -fx-padding: 11 14; -fx-cursor: hand;" text="ðŸ“…  Book Appointment" />
        <Button fx:id="btnView" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #0288d1;                        -fx-font-size: 12px; -fx-alignment: CENTER_LEFT;                        -fx-background-radius: 10; -fx-padding: 11 14; -fx-cursor: hand;" text="ðŸ“  My Appointments" />
    </VBox>

    <!-- PANEL 1 â€” VIEW DOCTORS -->
    <VBox fx:id="panelDoctors" layoutX="210" layoutY="80" prefHeight="560" prefWidth="740" spacing="16" visible="true">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="Our Doctors" />
        <TableView fx:id="doctorsTable" prefHeight="460" style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 16;">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colDocName" prefWidth="370" text="Doctor Name" />
                <TableColumn fx:id="colDocSpecialty" prefWidth="370" text="Specialty" />
            </columns>
        </TableView>
    </VBox>

    <!-- PANEL 2 â€” BOOK APPOINTMENT -->
    <VBox fx:id="panelBook" layoutX="210" layoutY="80" prefWidth="460" spacing="16" visible="false">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="Book an Appointment" />
        <VBox spacing="16" style="-fx-background-color: rgba(255,255,255,0.38); -fx-background-radius: 20;                      -fx-padding: 30 35; -fx-border-color: rgba(0,188,212,0.4);                      -fx-border-radius: 20; -fx-border-width: 1.5;">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #01579b;" text="Select Doctor" />
            <ComboBox fx:id="doctorCombo" prefWidth="380" promptText="Choose a doctor" style="-fx-background-radius: 16; -fx-border-radius: 16;                              -fx-background-color: rgba(255,255,255,0.85);                              -fx-border-color: #00bcd4; -fx-border-width: 1.5; -fx-padding: 6;" />
            <Label style="-fx-font-weight: bold; -fx-text-fill: #01579b;" text="Select Date" />
            <DatePicker fx:id="datePicker" prefWidth="380" style="-fx-background-radius: 16; -fx-border-radius: 16;                                -fx-background-color: rgba(255,255,255,0.85);                                -fx-border-color: #00bcd4; -fx-border-width: 1.5;" />
            <Label style="-fx-font-size: 11px; -fx-text-fill: #78909c;" text="ðŸ’¡ A queue token will be auto-generated after booking." />
            <Button onAction="#handleBooking" prefWidth="380" style="-fx-background-color: #00bcd4; -fx-text-fill: white;                            -fx-font-size: 14px; -fx-font-weight: bold;                            -fx-background-radius: 16; -fx-padding: 13 0; -fx-cursor: hand;" text="âœ…  Confirm &amp; Get Token" />
        </VBox>
    </VBox>

    <!-- PANEL 3 â€” MY APPOINTMENTS -->
    <VBox fx:id="panelView" layoutX="210" layoutY="80" prefHeight="560" prefWidth="740" spacing="14" visible="false">

        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="My Appointments" />

        <!-- â”€â”€ CURRENT CHANNELING NUMBER BOX â”€â”€ -->
        <HBox alignment="CENTER_LEFT" spacing="14" style="-fx-background-color: rgba(255,255,255,0.55);                      -fx-background-radius: 14; -fx-border-color: rgba(0,188,212,0.45);                      -fx-border-radius: 14; -fx-border-width: 1.5;                      -fx-padding: 12 20 12 20;">

            <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="ðŸ”´  Now Channeling :" />

            <!-- This label is updated by controller -->
            <Label fx:id="currentChannelingLabel" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #546e7a;" text="Doctor not started yet" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnRefresh" onAction="#handleRefresh" style="-fx-background-color: #00bcd4; -fx-text-fill: white;                            -fx-font-size: 11px; -fx-font-weight: bold;                            -fx-background-radius: 10; -fx-padding: 6 14; -fx-cursor: hand;" text="ðŸ”„ Refresh" />
        </HBox>

        <!-- APPOINTMENTS TABLE -->
        <TableView fx:id="appointmentsTable" prefHeight="420" style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 16;">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colDoctor" prefWidth="200" text="Doctor" />
                <TableColumn fx:id="colSpecialty" prefWidth="160" text="Specialty" />
                <TableColumn fx:id="colDate" prefWidth="140" text="Date" />
                <TableColumn fx:id="colToken" prefWidth="100" text="ðŸŽ« Token" />
                <TableColumn fx:id="colStatus" prefWidth="140" text="Status" />
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
