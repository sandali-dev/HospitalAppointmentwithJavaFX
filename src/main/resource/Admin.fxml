<AnchorPane prefHeight="680" prefWidth="980" style="-fx-background-color: #e0f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AdminController">

    <!-- TOP BAR -->
    <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefWidth="980" spacing="16" style="-fx-background-color: white; -fx-padding: 14 28 14 28;                  -fx-border-color: #b2ebf2; -fx-border-width: 0 0 1.5 0;">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="Hospital Appointment Management System" />
        <Region HBox.hgrow="ALWAYS" />
        <Label style="-fx-font-size: 13px; -fx-text-fill: #546e7a;" text="Welcome, Admin" />
        <Button fx:id="logoutBtn" style="-fx-background-color: #00bcd4; -fx-text-fill: white;                        -fx-font-weight: bold; -fx-background-radius: 12;                        -fx-padding: 7 18; -fx-cursor: hand;" text="Logout" />
    </HBox>

    <!-- SIDEBAR â€” all buttons same style, hover handled in controller -->
    <VBox layoutX="0" layoutY="57" prefHeight="623" prefWidth="190" spacing="10" style="-fx-background-color: rgba(255,255,255,0.6); -fx-padding: 24 12;                  -fx-border-color: #b2ebf2; -fx-border-width: 0 1.5 0 0;">
        <Label style="-fx-font-size: 10px; -fx-font-weight: bold;                       -fx-text-fill: #90a4ae; -fx-padding: 0 0 6 6;" text="MENU" />
        <Button fx:id="btnDoctors" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #0288d1;                        -fx-font-size: 12px; -fx-alignment: CENTER_LEFT;                        -fx-background-radius: 10; -fx-padding: 11 14; -fx-cursor: hand;" text="ðŸ‘¨â€âš•ï¸  Manage Doctors" />
        <Button fx:id="btnAppointments" maxWidth="Infinity" style="-fx-background-color: transparent; -fx-text-fill: #0288d1;                        -fx-font-size: 12px; -fx-alignment: CENTER_LEFT;                        -fx-background-radius: 10; -fx-padding: 11 14; -fx-cursor: hand;" text="ðŸ“…  All Appointments" />
    </VBox>

    <!-- PANEL 1 â€” MANAGE DOCTORS -->
    <VBox fx:id="panelDoctors" layoutX="205" layoutY="80" prefHeight="560" prefWidth="755" spacing="16" visible="true">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="Manage Doctors" />
        <VBox spacing="14" style="-fx-background-color: rgba(255,255,255,0.38); -fx-background-radius: 20;                      -fx-padding: 24 28; -fx-border-color: rgba(0,188,212,0.4);                      -fx-border-radius: 20; -fx-border-width: 1.5;">
            <TableView fx:id="doctorsTable" prefHeight="360" style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 12;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="colDocUsername" prefWidth="140" text="Username" />
                    <TableColumn fx:id="colDocName" prefWidth="190" text="Name" />
                    <TableColumn fx:id="colDocSpecialty" prefWidth="160" text="Specialty" />
                    <TableColumn fx:id="colDocContact" prefWidth="140" text="Contact" />
                    <TableColumn fx:id="colDocQueue" prefWidth="80" text="Queue" />
                </columns>
            </TableView>
            <HBox spacing="16">
                <Button onAction="#handleAddDoctor" style="-fx-background-color: #00bcd4; -fx-text-fill: white;                                -fx-font-weight: bold; -fx-background-radius: 14;                                -fx-padding: 11 22; -fx-cursor: hand;" text="âž•  Add Doctor" />
                <Button onAction="#handleRemoveDoctor" style="-fx-background-color: #e53935; -fx-text-fill: white;                                -fx-font-weight: bold; -fx-background-radius: 14;                                -fx-padding: 11 22; -fx-cursor: hand;" text="ðŸ—‘  Remove Doctor" />
            </HBox>
        </VBox>
    </VBox>

    <!-- PANEL 2 â€” ALL APPOINTMENTS -->
    <VBox fx:id="panelAppointments" layoutX="205" layoutY="80" prefHeight="560" prefWidth="755" spacing="16" visible="false">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #01579b;" text="All Appointments" />
        <TableView fx:id="appointmentsTable" prefHeight="460" style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 16;">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colApptToken" prefWidth="90" text="ðŸŽ« Token" />
