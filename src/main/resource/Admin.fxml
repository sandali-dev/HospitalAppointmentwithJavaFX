<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="680" prefWidth="980"
            style="-fx-background-color: #e0f7fa;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.AdminController">

    <!-- TOP BAR -->
    <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefWidth="980" spacing="16"
          style="-fx-background-color: white; -fx-padding: 14 28 14 28;
                 -fx-border-color: #b2ebf2; -fx-border-width: 0 0 1.5 0;">
        <Label text="EliteCare Clinic"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #01579b;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Welcome, Admin"
               style="-fx-font-size: 13px; -fx-text-fill: #546e7a;"/>
        <Button fx:id="logoutBtn" text="Logout"
                style="-fx-background-color: #00bcd4; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-background-radius: 12;
                       -fx-padding: 7 18; -fx-cursor: hand;"/>
    </HBox>

    <!-- SIDEBAR â€” all buttons same style, hover handled in controller -->
    <VBox layoutX="0" layoutY="57" prefHeight="623" prefWidth="190" spacing="10"
          style="-fx-background-color: rgba(255,255,255,0.6); -fx-padding: 24 12;
                 -fx-border-color: #b2ebf2; -fx-border-width: 0 1.5 0 0;">
        <Label text="MENU"
               style="-fx-font-size: 10px; -fx-font-weight: bold;
                      -fx-text-fill: #90a4ae; -fx-padding: 0 0 6 6;"/>
        <Button fx:id="btnDoctors" text="ðŸ‘¨â€âš•ï¸  Manage Doctors" maxWidth="Infinity"
                style="-fx-background-color: transparent; -fx-text-fill: #0288d1;
                       -fx-font-size: 12px; -fx-alignment: CENTER_LEFT;
                       -fx-background-radius: 10; -fx-padding: 11 14; -fx-cursor: hand;"/>
        <Button fx:id="btnAppointments" text="ðŸ“…  All Appointments" maxWidth="Infinity"
                style="-fx-background-color: transparent; -fx-text-fill: #0288d1;
                       -fx-font-size: 12px; -fx-alignment: CENTER_LEFT;
                       -fx-background-radius: 10; -fx-padding: 11 14; -fx-cursor: hand;"/>
    </VBox>

    <!-- PANEL 1 â€” MANAGE DOCTORS -->
    <VBox fx:id="panelDoctors" layoutX="205" layoutY="80" prefHeight="560" prefWidth="755"
          spacing="16" visible="true">
        <Label text="Manage Doctors"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #01579b;"/>
        <VBox spacing="14"
              style="-fx-background-color: rgba(255,255,255,0.38); -fx-background-radius: 20;
                     -fx-padding: 24 28; -fx-border-color: rgba(0,188,212,0.4);
                     -fx-border-radius: 20; -fx-border-width: 1.5;">
            <TableView fx:id="doctorsTable" prefHeight="360"
                       style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 12;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="colDocUsername"  text="Username"  prefWidth="140"/>
                    <TableColumn fx:id="colDocName"      text="Name"      prefWidth="190"/>
                    <TableColumn fx:id="colDocSpecialty" text="Specialty" prefWidth="160"/>
                    <TableColumn fx:id="colDocContact"   text="Contact"   prefWidth="140"/>
                    <TableColumn fx:id="colDocQueue"     text="Queue"     prefWidth="80"/>
                </columns>
            </TableView>
            <HBox spacing="16">
                <Button text="âž•  Add Doctor" onAction="#handleAddDoctor"
                        style="-fx-background-color: #00bcd4; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 14;
                               -fx-padding: 11 22; -fx-cursor: hand;"/>
                <Button text="ðŸ—‘  Remove Doctor" onAction="#handleRemoveDoctor"
                        style="-fx-background-color: #e53935; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 14;
                               -fx-padding: 11 22; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- PANEL 2 â€” ALL APPOINTMENTS -->
    <VBox fx:id="panelAppointments" layoutX="205" layoutY="80" prefHeight="560" prefWidth="755"
          spacing="16" visible="false">
        <Label text="All Appointments"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #01579b;"/>
        <TableView fx:id="appointmentsTable" prefHeight="460"
                   style="-fx-background-color: rgba(255,255,255,0.7); -fx-background-radius: 16;">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="colApptToken"   text="ðŸŽ« Token" prefWidth="90"/>
                <TableColumn fx:id="colApptPatient" text="Patient"  prefWidth="170"/>
                <TableColumn fx:id="colApptDoctor"  text="Doctor"   prefWidth="170"/>
                <TableColumn fx:id="colApptDate"    text="Date"     prefWidth="130"/>
                <TableColumn fx:id="colApptStatus"  text="Status"   prefWidth="130"/>
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
